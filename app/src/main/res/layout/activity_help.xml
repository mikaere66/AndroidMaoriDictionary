<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity" >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_expand_all"
        android:id="@+id/expand_all_button"
        android:onClick="expandAll"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:minWidth="105dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/collapse_all_button"
        android:text="@string/help_collapse"
        android:layout_centerHorizontal="true"
        android:onClick="collapseAll"
        android:minWidth="105dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_back_to_top"
        android:id="@+id/back_to_top_button"
        android:onClick="backToTop"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:minWidth="105dp"/>

    <com.idunnololz.widgets.AnimatedExpandableListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/expand_all_button"/>

</RelativeLayout>
